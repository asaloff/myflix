%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          = f.alert_message "Please fix the errors below."
          %fieldset
            = f.text_field :title, control_col: "col-sm-3"
            = f.select :category_id, options_for_categories, { include_blank: true }
            = f.text_area :description, rows: "8"
            = f.file_field :large_cover
            = f.file_field :small_cover
            = f.text_field :video_url, label: "Video URL"
          %fieldset.actions
            = f.submit "Add Video", class: "col-md-offset-3 btn btn-default"