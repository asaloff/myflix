%article.video_category
  %header
    - @categories.each do |category|
      %h3= link_to category.title, category_path(category)
      %br
      .videos.row
        - category.videos.each do |vid|
          .video.col-sm-2
            = link_to vid, nil do
              %img{src: vid.small_cover_url}
      %br
