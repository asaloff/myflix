%article.video_category
  %header
    - @categories.each do |category|
      %h3= link_to category.title, category_path(category)
      %br
      .videos.row
        - category.recent_videos.each do |vid|
          .video.col-sm-2
            = link_to vid, nil do
              =image_tag vid.small_cover
      %br
