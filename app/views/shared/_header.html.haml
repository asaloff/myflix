%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-md-3.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag search_videos_path, class: "col-md-5 navbar-form", method: 'get' do
      .form-group
        = text_field_tag :search, nil, class: "form-control", placeholder: "Search for videos here"
        = submit_tag 'Search', class: "btn .btn-default"
    #user_links.pull-right
      %ul
        %li.dropdown
          %a.dropdown-toggle(type="button" data-toggle="dropdown" aria-expanded="true")
            = "Welcome, #{current_user.full_name.titleize}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', logout_path
