%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-md-5.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
      %li= link_to "Advanced Search", advanced_search_videos_path
    = form_tag search_videos_path, class: "col-md-2 navbar-form", method: 'get' do
      .form-group
        = text_field_tag :search, nil, class: "form-control", placeholder: "Search for videos here"
        = submit_tag 'Search', class: "btn btn-default"
    #user_links.pull-right
      %ul
        %li.dropdown
          %a.dropdown-toggle(type="button" data-toggle="dropdown" aria-expanded="true")
            = "Welcome, #{current_user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              =link_to "Invite a Friend", new_invitation_path
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', logout_path
